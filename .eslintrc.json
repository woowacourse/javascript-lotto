{
  "rules": {
    "max-lines-per-function": ["error", { "max": 10 }],
    "max-depth": ["error", { "max": 1 }]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "max-lines-per-function": "off",
        "max-depth": "off",
        "no-undef": "off"
      }
    }
  ],
  "extends": ["eslint:recommended"]
}
