{
  "rules": {
    "max-depth": ["error", 1],
    "max-lines-per-function": ["error", 10],
    "max-params": ["error", 2],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "eqeqeq": "error",
    "no-console": "warn",
    "no-dupe-args": "error",
    "no-unreachable": "error",
    "no-unused-vars": "warn"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["**/__tests__/*"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"]
}
