{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "prettier/prettier": "error",
    "max-depth": ["error", 1],
    "max-lines-per-function": ["error", 12],
    "lines-between-class-members": ["error", "always", { "exceptAfterSingleLine": true }]
  }
}
