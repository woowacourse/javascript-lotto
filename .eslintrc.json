{
  "rules": {
    "max-depth": ["error", 1],
    "max-params": ["error", 2],
    "prefer-const": "error"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "extends": [
    "eslint:recommended"
    // "plugin:prettier/recommended"
  ],
  "ignorePatterns": ["**/__tests__/**"]
}
