{
  "env": {
    "jest": true,
    "node": true,
    "es2022": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 13
  },
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "rules": {
    "prettier/prettier": ["error"],
    "max-depth": ["error", 1],
    "max-params": ["error", 2],
    "max-lines-per-function": "off",
    "import/extensions": "off",
    "lines-between-class-members": "off"
  }
}
