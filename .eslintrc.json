{
  "rules": {
    "max-depth": ["error", 1],
    "max-params": ["error", 2],
    "no-return-assign": "off",
    "no-return-await": "off",
    "class-methods-use-this": "off"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["airbnb-base", "prettier"],
  "ignorePatterns": ["dist"]
}
