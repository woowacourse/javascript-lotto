{
  "rules": {
    "import/extensions": "off",
    "class-methods-use-this": "off",
    "no-await-in-loop": "off",
    "no-constant-condition": "off"
  },
  "overrides": [
    {
      "files": ["./src/**"]
    }
  ],

  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": ["airbnb", "prettier"]
}
