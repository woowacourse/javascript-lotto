{
  "rules": {
    "max-depth": ["error", 1],
    "max-params": ["error", 2],
    "lines-between-class-members": "off",
    "import/extensions": ["error", "never"],
    "class-methods-use-this": "off"
  },
  "overrides": [
    {
      "files": ["./src/**"],
      "rules": {
        "max-lines-per-function": ["error", {
          "max": 10
        }]
      }
    },
    {
      "files": ["./src/web/**"],
      "rules": {
        "max-lines-per-function": "off",
        "max-params": "off"
      }
    }
  ],
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": ["airbnb", "prettier"]
}
