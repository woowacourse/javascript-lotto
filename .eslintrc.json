{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-lines-per-function": ["warn", 10],
    "no-var": 2,
    "max-depth": ["warn", 1],
    "no-undef": 2,
    "eqeqeq": "warn",
    "max-params": ["warn", 2]
  }
}
