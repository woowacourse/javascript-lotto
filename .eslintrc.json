{
  "rules": {
    "import/extensions": ["error", "ignorePackages"], // 패키지를 제외한 import 시 파일 확장자를 명시
    "import/prefer-default-export": "off", // default export를 강제하지 않음
    "class-methods-use-this": "off", // 클래스 메서드에서 this 사용을 강제하지 않음
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }], // for문 내에서 ++, -- 사용을 허용
    "lines-between-class-members": ["error", "always", { "exceptAfterSingleLine": true }], // 클래스 멤버 간 줄 간격을 유지
    "max-depth": ["error", 1], // 들여쓰기 깊이를 최대 1단계로 제한
    "max-lines-per-function": ["error", { "max": 15 }] // 함수의 최대 줄 수를 15줄로 제한
  },
  "env": {
    "es6": true, // ES6(ECMAScript 2015) 문법을 사용
    "node": true // Node.js 환경을 설정
  },
  "parserOptions": {
    "ecmaVersion": "latest", // 최신 ECMAScript 문법을 파싱
    "sourceType": "module" // ES 모듈을 사용할 수 있도록 설정
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"] // ESLint 권장 설정과 Prettier 충돌 방지
}
