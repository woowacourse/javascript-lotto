{
  "rules": {
    "lines-between-class-members": "off",
    "class-methods-use-this": "off",
    "no-continue": "off",
    "no-constant-condition": "off",
    "no-await-in-loop": "off",
    "no-console": "off",
    "no-restricted-globals": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"]
}
